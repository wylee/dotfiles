[user]
    name = Wyatt Lee Baldwin
    email = wyatt.lee.baldwin@gmail.com

[alias]
    push-all = !git push --follow-tags all && git fetch --all
    new = !git log --oneline --reverse origin/$(git rev-parse --abbrev-ref HEAD)..
    new-since = !git log --oneline --reverse ${1}..

[branch "master"]
    mergeOptions = --no-ff

[color]
    ui = true

[core]
    excludesfile = ~/.gitignore

[push]
    default = simple

[rebase]
    autoSquash = true

[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true

[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true
