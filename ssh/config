Host *
    UseKeychain yes
    AddKeysToAgent yes
    IdentitiesOnly yes

Host 192.168.1.1
    IdentityFile ~/.ssh/id_rsa

# Code ----------------------------------------------------------------

Host bitbucket.org
    IdentityFile ~/.ssh/id_rsa-bitbucket

Host github.com
    IdentityFile ~/.ssh/id_rsa-github

Host gitlab.com
    IdentityFile ~/.ssh/id_rsa-gitlab

Host pypi.org
    IdentityFile ~/.ssh/id_rsa-pypi

# wyattbaldwin.com ----------------------------------------------------

Host wyattbaldwin.com
    User ubuntu
    IdentityFile ~/.ssh/id_rsa-sites

